<h1 align="center">Welcome to <%= @user.username %>'s profile</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
     <%= gravatar_for @user %> <!--defines method-->
  </div>
  
</div>
<h4 align="center">Location: <%= @user.location %> </h4> 
<h4 align="center"><%= @user.username %>'s records available for swap</h4>

<% if logged_in? && (current_user == @user.username || current_user.admin?) %>
<h4 align="center">Email <%= link_to @user.email, "mailto:#{@user.email}" %> </h4> 
<% end %>
<div class="center">
  <%= will_paginate @user_articles %>
</div>

<!--renders partial 'views/articles/_article.html.erb-->
<!--lists articles associted with user-->
<%= render 'articles/article', obj: @user_articles %> 
<div class="center">
  <%= will_paginate @user_articles %>
</div>

  
