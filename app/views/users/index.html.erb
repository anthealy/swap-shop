<h1 align="center">All Users</h1>
<div align="center">
  <%= will_paginate %>
    <% @users.each do |user| %>    <!--loop through all users -->
      <ul class="listing"> 
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(user), user_path(user) %></li>  <!--show user image -->
            <li class="article-artist">
              <%= link_to user.username, user_path(user) %> <!--show users profile -->
            </li>
            <li><small><%= pluralize(user.articles.count, "record") if user.articles %></small></li> <!--show total number of items a users has posted-->
            <% if logged_in? and current_user.admin? %> 
              <li><%= link_to "Delete this user", user_path(user), method: :delete, 
                  data: { confirm: "Are you sure you want to delete this user and all their vinyl?" }%></li>
            <% end %>
         </div>
       </div>
      </ul>
    
    <% end %>
    <%= will_paginate %>
</div>