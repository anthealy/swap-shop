<% if @article.errors.any? %>
 <h2>Oh Oh, looks like you did something wrong! Please try again.</h2>
 <ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
 </ul>
<% end %>


<%= form_for @article do |f| %> 
   <p>
      <%= f.label :artist %><br/>
      <%= f.text_field :artist %>
      </p>
      
         <p>
      <%= f.label :album %><br/>
      <%= f.text_field :album %>
      </p>
      
         <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
      </p>
      
         <p>
      <%= f.submit %>
      </p>

<% end %>  

<%= link_to "Back to record listings", articles_path %> 