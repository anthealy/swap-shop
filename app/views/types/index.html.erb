<h1 align="center">Listing All Types</h1>
<div align="center">
  <%= will_paginate %>
  <% @types.each do |type| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-artist">
            <%= link_to "#{type.name}", type_path(type) %>
          </li>
          <li><small><%= pluralize(type.articles.count, "records") %></small></li>
        </div>
      </div>      
    </ul>
  
  <% end %>
  <% will_paginate %>
</div>